<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/favicon.ico') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar">
            <ul class="navlinks">
                <li><a href="{{ path('home') }}">About</a></li>
                <li><a href="{{ path('report') }}">Report</a></li>
                <li><a href="{{ path('lucky') }}">Lucky</a></li>
                <li><a href="{{ path('quote') }}">Quote</a></li>
            </ul>
        </nav>
        <header class="site-header" style="background-image: url({{ asset('img/header.jpg') }})">
            <span class="site-title">My Symfony Site</span>
        </header>
        {% block body %}{% endblock %}
        <footer class="footer">
            <div class="footer-content">
                <p>&copy; Patrik Lindblom</p>
            </div>
        </footer>
    </body>
</html>
